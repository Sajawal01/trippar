<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsFragment.SettingsFragment"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/ic_wave">

    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:elevation="10dp"
        android:layout_marginTop="-13dp"
        android:layout_marginHorizontal="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="#58aced"
            android:layout_marginHorizontal="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/profile_shape"
                    android:src="@drawable/ic_baseline_person_24">

                </ImageView>

                <TextView
                    android:id="@+id/txt1_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:hint="Account Setting"
            android:layout_marginHorizontal="5dp">

        </TextView>

        <LinearLayout
            android:id="@+id/layout_editProfile"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="130dp"
            android:orientation="horizontal"
            android:background="@drawable/textview_background"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Edit Profile"
                android:layout_marginLeft="5dp"
                android:textStyle="bold">

            </TextView>

            <View
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:background="@drawable/ic_baseline_arrow_forward_24">

            </View>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_editPassword"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="172dp"
            android:background="@drawable/textview_background"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Edit Password"
                android:textStyle="bold"
                android:layout_marginLeft="5dp">

            </TextView>

            <View
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:background="@drawable/ic_baseline_arrow_forward_24">

            </View>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_language"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="216dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/textview_background">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Change Language"
                android:textStyle="bold"
                android:layout_marginLeft="5dp">

            </TextView>

            <View
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="137dp"
                android:background="@drawable/ic_baseline_arrow_forward_24">

            </View>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_switchAccount"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="258dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/textview_background">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Private Account"
                android:textStyle="bold"
                android:layout_marginLeft="5dp">

            </TextView>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:checked="true">

            </Switch>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_pushNotification"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="300dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/textview_background">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Push Notification"
                android:textStyle="bold"
                android:layout_marginLeft="5dp">

            </TextView>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp">

            </Switch>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_darkMood"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="342dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/textview_background">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Dark Mood"
                android:textStyle="bold"
                android:layout_marginLeft="5dp">

            </TextView>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp">

            </Switch>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/textview_background"
            android:id="@+id/layout_termsPrivacy"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="383dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Terms and Privacy"
                android:textStyle="bold"
                android:layout_marginLeft="5dp">

            </TextView>
            <View
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:background="@drawable/ic_baseline_arrow_forward_24">

            </View>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_logout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="425dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_baseline_exit_to_app_24">

            </View>

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Logout"
                android:layout_marginLeft="5dp"
                android:textStyle="bold">

            </TextView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>