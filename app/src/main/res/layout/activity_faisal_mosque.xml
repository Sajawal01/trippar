<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaisalMosqueActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:background="@drawable/faisal">

            <Button
                android:id="@+id/btn_back_faisal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="17dp">
            </Button>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shah Faisal Mosque"
                android:textStyle="bold"
                android:textColor="#4285F4">

            </TextView>

            <TextView
                android:id="@+id/name1_transporter1"
                android:layout_width="match_parent"
                android:text="Religious"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

            </TextView>

            <TextView
                android:id="@+id/location1_transporter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Islamabad, Pakistan"
                android:layout_marginTop="5dp">

            </TextView>

            <TextView
                android:id="@+id/description1_transporter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Faisal Mosque is the largest mosque in Pakistan, located in the national capital city of Islamabad. Completed in 1986, it was designed by Turkish architect Vedat Dalokay, shaped like a desert Bedouin's tent, is an iconic symbol of Islamabad throughout the world."
                android:layout_marginTop="5dp">

            </TextView>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="15dp"
            android:background="#4285F4">

        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accessible Via"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="40dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:text="Bike"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/textview_background">

            </TextView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:text="Car"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:background="@drawable/textview_background">

            </TextView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:text="Bus"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:background="@drawable/textview_background">

            </TextView><TextView
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:text="4*4 Jeep"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:background="@drawable/textview_background">

        </TextView>

        </LinearLayout>

        <!--        <View-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="2dp"-->
        <!--            android:layout_marginHorizontal="40dp"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:background="#4285F4">-->

        <!--        </View>-->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available for"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="40dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:text="Family"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textview_background">

                </TextView>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:text="Adults"
                    android:gravity="center"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/textview_background">

                </TextView>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:text="Elders"
                    android:gravity="center"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/textview_background">

                </TextView>

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:text="Everyone"
                    android:gravity="center"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/textview_background">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:text="Infants"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textview_background">

                </TextView>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:text="Kids"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/textview_background">

                </TextView>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="Disable People"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/textview_background">

                </TextView>


            </LinearLayout>

        </LinearLayout>

        <!--        <View-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="2dp"-->
        <!--            android:layout_marginHorizontal="40dp"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:background="#4285F4">-->

        <!--        </View>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="40dp">

        </TextView>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="All Traditional foods and Desi foods."
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/textview_background">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Route condition"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="40dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Good Road Condition"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="50dp">

        </TextView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="15dp"
            android:background="#4285F4">

        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activities"
            android:textColor="#4285F4"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="40dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tourists can do the following activities on this place"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="40dp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="40dp"
            android:text="No Activity Found"
            android:textStyle="bold"
            android:layout_gravity="center">

        </TextView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="15dp"
            android:background="#4285F4">

        </View>

        <LinearLayout
            android:id="@+id/weather"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="80dp"
            android:background="@drawable/weather"
            android:gravity="center">

            <Button
                android:id="@+id/btn_weather_faisal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Check Weather Now"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:layout_marginHorizontal="40dp">

            </Button>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="15dp"
            android:background="#4285F4">

        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transport"
            android:textColor="#4285F4"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="40dp">

        </TextView>

        <LinearLayout
            android:id="@+id/khawar_layout_faisal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/khawar_faisal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="175dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/name_faisal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                </TextView>

                <TextView
                    android:id="@+id/location_faisal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                </TextView>

                <TextView
                    android:id="@+id/mail_faisal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                </TextView>

                <TextView
                    android:id="@+id/phone_faisal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                </TextView>

            </LinearLayout>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_arrow_forward_24">

            </Button>

        </LinearLayout>

    </LinearLayout>


</ScrollView>