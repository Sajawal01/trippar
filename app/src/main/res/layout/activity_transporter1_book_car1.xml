<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transporter1BookCar1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_back_transport1_book"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="17dp">
        </Button>

        <EditText
            android:id="@+id/fname_transporter1_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:hint="First Name"
            android:inputType="text">

        </EditText>

        <EditText
            android:id="@+id/lname_transporter1_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:hint="Last Name"
            android:inputType="text">

        </EditText>

        <EditText
            android:id="@+id/phone_transporter1_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:hint="Phone Number"
            android:inputType="numberPassword">

        </EditText>

        <EditText
            android:id="@+id/email_transporter1_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:hint="Email"
            android:inputType="textEmailAddress">

        </EditText>

        <EditText
            android:id="@+id/startdate_transporter1_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:hint="Start Date"
            android:inputType="datetime">

        </EditText>

        <EditText
            android:id="@+id/enddate_transporter1_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:hint="End Date"
            android:inputType="datetime">

        </EditText>

        <EditText
            android:id="@+id/adult_transporter1_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:hint="No. of Adults"
            android:inputType="number">

        </EditText>

        <EditText
            android:id="@+id/kid_transporter1_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:hint="No. of Kids"
            android:inputType="number">

        </EditText>

        <EditText
            android:id="@+id/country_transporter1_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:hint="Country"
            android:inputType="text">

        </EditText>

        <EditText
            android:id="@+id/province_transporter1_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:hint="Province"
            android:inputType="text">

        </EditText>

        <EditText
            android:id="@+id/city_transporter1_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:hint="City"
            android:inputType="text">

        </EditText>

        <EditText
            android:id="@+id/message_transporter1_book"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:hint="Message"
            android:inputType="text">

        </EditText>

        <Button
            android:id="@+id/btn_book_transporter1_book_car1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Book"
            android:textColor="@color/white"
            android:background="@drawable/btn_background"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="30dp">

        </Button>

    </LinearLayout>

</ScrollView>