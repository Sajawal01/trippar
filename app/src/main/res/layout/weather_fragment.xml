<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.weather.WeatherFragment"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:lottie_fileName="weather.anim.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp"
        android:text="If you don't know the current update of your weather or any other city's weather report then check the complete update and report using our weather."
        android:textStyle="bold"
        android:gravity="center">

    </TextView>

    <LinearLayout
        android:id="@+id/weather"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/weather"
        android:gravity="center">

        <Button
            android:id="@+id/btn_weather"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Check Weather Now"
            android:textColor="@color/white"
            android:background="@drawable/btn_background"
            android:layout_marginHorizontal="40dp">

        </Button>

    </LinearLayout>

</LinearLayout>